---
const currentPath = Astro.url.pathname;

const links = [
  { url: "/", label: "Home" },
  { url: "/about", label: "About" },
  { url: "/blog", label: "Blog" },
  { url: "/tags", label: "Tags" },
];
---

<div class="nav-links">
  {
    links.map((link) => (
      <a
        href={link.url}
        class={
          (link.url === "/" && currentPath === "/") ||
          (link.url !== "/" && currentPath.startsWith(link.url))
            ? "active"
            : ""
        }
      >
        {link.label}
      </a>
    ))
  }
</div>

<style>
  .active {
    border-bottom: 2px solid #0070f3;
  }
</style>
